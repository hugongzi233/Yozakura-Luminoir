{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run tvpwin32.exe",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Start-Process -FilePath '${workspaceFolder}/tvpwin32.exe' -NoNewWindow -Wait | Tee-Object -FilePath 'output.log'"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true,
                "close": false
            }
        }
    ]
}